// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-k": "menu::SelectPrevious",
      "ctrl-j": "menu::SelectNext"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-space": "tab_switcher::Toggle",
      "cmd-shift-a": "assistant::ToggleFocus",
      "cmd-shift-e": "project_panel::ToggleFocus",
      "cmd-shift-g": "git_panel::ToggleFocus",
      "cmd-shift-o": "outline_panel::ToggleFocus",
      "cmd-shift-c": "collab_panel::ToggleFocus",
      "ctrl-;": "workspace::ToggleLeftDock",
      "ctrl-'": "workspace::ToggleRightDock",
      "ctrl-\\": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-space": "tab_switcher::Toggle",
      "cmd-shift-a": "assistant::ToggleFocus",
      "cmd-shift-e": "project_panel::ToggleFocus",
      "cmd-shift-g": "git_panel::ToggleFocus",
      "cmd-shift-o": "outline_panel::ToggleFocus",
      "cmd-shift-c": "collab_panel::ToggleFocus",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      // "ctrl-k": "workspace::ActivatePaneUp",
      // "ctrl-j": "workspace::ActivatePaneDown",
      "alt-k": "editor::MoveLineUp",
      "alt-j": "editor::MoveLineDown",
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious",
      "ctrl-.": "editor::ShowCompletions",
      "ctrl-w q": "pane::CloseAllItems"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space e": "project_panel::ToggleFocus",
      "space g g": "pane::CloseActiveItem",
      "space w d": "pane::CloseActiveItem",
      "space x x": "diagnostics::Deploy",
      "space p": "file_finder::Toggle",
      "space o": "outline::Toggle",
      "space space": "tab_switcher::Toggle",
      "space /": "workspace::NewSearch",
      "shift shift": "tab_switcher::Toggle",
      "space b": "tab_switcher::Toggle",
      "ctrl-v": "pane::SplitRight",
      "] space": "editor::NewlineBelow",
      "[ space": "editor::NewlineAbove",
      "ctrl-p": "file_finder::Toggle"
    }
  },
  {
    "context": "FileFinder",
    "bindings": {
      "ctrl-v": "menu::SecondaryConfirm",
      "cmd-k": "file_finder::SelectPrevious",
      "cmd-j": "file_finder::Toggle"
    }
  },
  {
    "context": "TabSwitcher",
    "bindings": {
      "k": "menu::SelectPrevious",
      "j": "menu::SelectNext",
      "l": "tab_switcher::CloseSelectedItem"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-n": "workspace::NewTerminal"
    }
  }
]
